<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Student Login - OMR Result Viewer</title>
<link rel="icon" href="data:image/x-icon;base64," type="image/x-icon">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <style>
        /* Enhanced date picker styling with mobile support */
        input[type="date"] {
            position: relative;
            cursor: pointer !important;
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
        }
        
        input[type="date"]::-webkit-calendar-picker-indicator {
            cursor: pointer;
            font-size: 1.2em;
            opacity: 0.8;
            padding: 4px;
        }
        
        input[type="date"]::-webkit-calendar-picker-indicator:hover {
            opacity: 1;
        }
        
        /* Mobile-specific date input styling */
        @media (max-width: 768px) {
            input[type="date"] {
                font-size: 16px !important; /* Prevents zoom on iOS */
                padding: 12px !important;
            }
            
            input[type="tel"] {
                font-size: 16px !important; /* Prevents zoom on iOS */
                padding: 12px !important;
            }
        }
        
        /* Ensure the entire date input is clickable */
        input[type="date"]:focus {
            outline: none;
            box-shadow: 0 0 0 0.2rem rgba(52, 73, 94, 0.25);
        }
        
        /* Mobile form improvements */
        @media (max-width: 768px) {
            .form-control-lg {
                font-size: 16px !important;
                padding: 12px 16px !important;
            }
            
            .btn-lg {
                font-size: 16px !important;
                padding: 12px 24px !important;
            }
            
            /* Prevent zoom on form inputs */
            input, select, textarea {
                font-size: 16px !important;
            }
        }
    </style>
</head>

<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #0a1e46;">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-graduation-cap me-2"></i>
                OMR Result Viewer
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="fas fa-home me-1"></i>Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/answer-key">
                            <i class="fas fa-key me-1"></i>Answer Key
                        </a>
                    </li>
                </ul>

            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container-fluid my-4">
        <div class="row g-4 justify-content-center">
            <!-- Left Side - Student Login Form (60%) -->
            <div class="col-12 col-lg-7 col-xl-6">
                <div class="card">
                    <div class="card-header text-white text-center" style="background-color: #34495e;">
                        <h4 class="mb-0">
                            <i class="fas fa-user-graduate me-2"></i>
                            Student Login Portal
                        </h4>
                        <p class="mb-0 mt-2">Access your exam results</p>
                    </div>
                    <div class="card-body">
                        <!-- Display Errors -->
                        <% if (errors && errors.length> 0) { %>
                            <div class="alert alert-danger">
                                <ul class="mb-0">
                                    <% errors.forEach(error=> { %>
                                        <li>
                                            <%= error.msg %>
                                        </li>
                                        <% }); %>
                                </ul>
                            </div>
                            <% } %>

                                <form action="/view" method="POST" id="studentAuthForm" style="position: relative;">
                                    <!-- Loading Overlay -->
                                    <div id="loadingOverlay" class="d-none"
                                        style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: rgba(255,255,255,0.9); z-index: 1000; border-radius: 10px;">
                                        <div class="d-flex justify-content-center align-items-center h-100">
                                            <div class="text-center">
                                                <div class="spinner-border text-primary mb-3" role="status"
                                                    style="width: 3rem; height: 3rem;">
                                                    <span class="visually-hidden">Loading...</span>
                                                </div>
                                                <div class="h5 text-primary">Verifying your details...</div>
                                                <div class="text-muted">Please wait while we authenticate you</div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Roll Number -->
                                    <div class="mb-4">
                                        <label for="rollNo" class="form-label">
                                            <i class="fas fa-id-card me-2"></i>
                                            Roll Number / Enrollment Number
                                        </label>
                                        <input type="text" class="form-control form-control-lg" id="rollNo"
                                            name="rollNo" placeholder="Enter your roll number" required>
                                    </div>

                                    <!-- Date of Birth -->
                                    <div class="mb-4">
                                        <label for="dob" class="form-label">
                                            <i class="fas fa-calendar me-2"></i>
                                            Date of Birth
                                        </label>
                                        <input type="date" class="form-control form-control-lg" id="dob" name="dob"
                                            max="<%= new Date().toISOString().split('T')[0] %>" 
                                            min="1950-01-01"
                                            style="cursor: pointer;">
                                        <div class="form-text">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Select your date of birth from the calendar
                                        </div>
                                    </div>

                                    <!-- OR Divider -->
                                    <div class="text-center mb-4">
                                        <div class="d-flex align-items-center">
                                            <hr class="flex-grow-1">
                                            <span class="px-4 text-muted bg-white">OR</span>
                                            <hr class="flex-grow-1">
                                        </div>
                                    </div>

                                    <!-- Mobile Number -->
                                    <div class="mb-4">
                                        <label for="mobile" class="form-label">
                                            <i class="fas fa-phone me-2"></i>
                                            Mobile Number
                                        </label>
                                        <input type="tel" class="form-control form-control-lg" id="mobile" name="mobile"
                                            placeholder="10 digit mobile number" maxlength="10" 
                                            autocomplete="tel" inputmode="numeric" pattern="[0-9]{10}">
                                        <div class="form-text">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Enter your 10 digit mobile number
                                        </div>
                                    </div>



                                    <!-- Submit Button -->
                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-lg py-3 text-white"
                                            style="background-color: #34495e;">
                                            <i class="fas fa-search me-2"></i>
                                            View My Results
                                        </button>
                                    </div>
                                </form>
                    </div>
                </div>

            </div>

            <!-- Right Side - Quick Info Panel (40%) -->
            <div class="col-12 col-lg-5 col-xl-4">
                <!-- Instructions Card -->
                <div class="card mb-4">
                    <div class="card-header text-white" style="background-color: #34495e;">
                        <h6 class="mb-0">
                            <i class="fas fa-info-circle me-2"></i>
                            Instructions
                        </h6>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            <li class="mb-3">
                                <i class="fas fa-check-circle me-2"></i>
                                Enter your roll number or enrollment number exactly as provided
                            </li>
                            <li class="mb-3">
                                <i class="fas fa-check-circle me-2"></i>
                                Fill  either Date of Birth OR Mobile Number for authentication
                            </li>
                            <li class="mb-3">
                                <i class="fas fa-check-circle me-2"></i>
                                Use the date picker to select your Date of Birth
                            </li>
                            <li class="mb-3">
                                <i class="fas fa-check-circle me-2"></i>
                                Mobile number should be exactly 10 digits without spaces
                            </li>
                            <li class="mb-3">
                                <i class="fas fa-check-circle me-2"></i>
                                If you provide both, Date of Birth will be used for authentication
                            </li>
                            <li class="mb-0">
                                <i class="fas fa-check-circle me-2"></i>
                                Contact nearby municipality if you face any issues accessing your results
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Quick Help Card -->
                <div class="card">
                    <div class="card-header text-white" style="background-color: #34495e;">
                        <h6 class="mb-0">
                            <i class="fas fa-question-circle me-2"></i>
                            Quick Help
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="accordion accordion-flush" id="helpAccordion">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#help1">
                                        How to login? (Detailed Guide)
                                    </button>
                                </h2>
                                <div id="help1" class="accordion-collapse collapse" data-bs-parent="#helpAccordion">
                                    <div class="accordion-body">
                                        <div class="mb-3">
                                            <strong>Step 1: Enter Roll Number</strong><br>
                                            <small class="text-muted">Example: DFO004, ABC123, XYZ007</small>
                                        </div>
                                        <div class="mb-3">
                                            <strong>Step 2: Choose Authentication Method</strong><br>
                                            <small class="text-muted">
                                                <strong>Option A - Date of Birth:</strong><br>
                                                Use the date picker to select your birth date<br>
                                                Click on the calendar icon to open date selector<br><br>
                                                <strong>Option B - Mobile Number:</strong><br>
                                                Format: 10 digits only<br>
                                                Example: 9876543210, 8765432109
                                            </small>
                                        </div>
                                        <div class="mb-2">
                                            <strong>Step 3: Click "View My Results"</strong><br>
                                            <small class="text-muted">System will verify your details and show results</small>
                                        </div>
                                        <div class="alert alert-info p-2 mt-2">
                                            <small><i class="fas fa-lightbulb me-1"></i> 
                                            <strong>Tip:</strong> If you enter both DOB and mobile, the system will use DOB for verification.</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#help2">
                                        Can't find results?
                                    </button>
                                </h2>
                                <div id="help2" class="accordion-collapse collapse" data-bs-parent="#helpAccordion">
                                    <div class="accordion-body">
                                        <small>Results may not be published yet. Check back later or contact nearby municipality for
                                            assistance.</small>
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#help3">
                                        Need support?
                                    </button>
                                </h2>
                                <div id="help3" class="accordion-collapse collapse" data-bs-parent="#helpAccordion">
                                    <div class="accordion-body">
                                        <small>Contact nearby municipality office or reach out to your
                                            institution for technical support.</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-light text-center py-3 mt-5">
        <div class="container">
            <p class="mb-0 text-muted">
                &copy; <%= new Date().getFullYear() %> OMR Result Viewer. All rights reserved.
            </p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Hide loading overlay on page load (in case of redirect back)
            const loadingOverlay = document.getElementById('loadingOverlay');
            if (loadingOverlay) {
                loadingOverlay.classList.add('d-none');
            }

            // Re-enable submit button
            const submitBtn = document.querySelector('#studentAuthForm button[type="submit"]');
            if (submitBtn) {
                submitBtn.disabled = false;
            }

            const dobInput = document.getElementById('dob');
            const mobileInput = document.getElementById('mobile');

            // Mobile detection
            const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
            console.log('Device type:', isMobile ? 'Mobile' : 'Desktop');
            console.log('User Agent:', navigator.userAgent);
            console.log('Screen size:', window.screen.width + 'x' + window.screen.height);
            console.log('Viewport size:', window.innerWidth + 'x' + window.innerHeight);

            // Date picker validation with visual feedback
            dobInput.addEventListener('change', function (e) {
                const value = e.target.value;
                
                // Visual feedback
                if (value) {
                    e.target.classList.add('is-valid');
                    e.target.classList.remove('is-invalid');
                } else {
                    e.target.classList.remove('is-valid', 'is-invalid');
                }
            });

            // Enhanced mobile input handling with debouncing
            let mobileInputTimeout;
            
            // Format mobile input (only digits) with visual feedback - Mobile optimized
            mobileInput.addEventListener('input', function (e) {
                // Clear previous timeout
                if (mobileInputTimeout) {
                    clearTimeout(mobileInputTimeout);
                }
                
                // Debounce for mobile devices to prevent conflicts
                mobileInputTimeout = setTimeout(() => {
                    // Remove all non-digits and limit to 10
                    let cleanValue = e.target.value.replace(/\D/g, '').substring(0, 10);
                    
                    // Only update if value changed to prevent cursor jumping on mobile
                    if (e.target.value !== cleanValue) {
                        e.target.value = cleanValue;
                    }

                    // Visual feedback
                    if (cleanValue.length === 10) {
                        e.target.classList.add('is-valid');
                        e.target.classList.remove('is-invalid');
                    } else if (cleanValue.length > 0) {
                        e.target.classList.add('is-invalid');
                        e.target.classList.remove('is-valid');
                    } else {
                        e.target.classList.remove('is-valid', 'is-invalid');
                    }
                }, isMobile ? 300 : 0); // Longer delay on mobile
            });

            // Handle paste events for mobile
            mobileInput.addEventListener('paste', function (e) {
                setTimeout(() => {
                    let cleanValue = e.target.value.replace(/\D/g, '').substring(0, 10);
                    e.target.value = cleanValue;
                    
                    // Trigger validation
                    if (cleanValue.length === 10) {
                        e.target.classList.add('is-valid');
                        e.target.classList.remove('is-invalid');
                    } else if (cleanValue.length > 0) {
                        e.target.classList.add('is-invalid');
                        e.target.classList.remove('is-valid');
                    }
                }, 100);
            });

            // Clear validation when switching between fields
            dobInput.addEventListener('focus', function () {
                mobileInput.classList.remove('is-valid', 'is-invalid');
                // Clear any client-side error alerts
                const clientError = document.querySelector('.alert-danger.client-error');
                if (clientError) clientError.remove();
            });

            mobileInput.addEventListener('focus', function () {
                dobInput.classList.remove('is-valid', 'is-invalid');
                // Clear any client-side error alerts
                const clientError = document.querySelector('.alert-danger.client-error');
                if (clientError) clientError.remove();
            });

            // Form validation with mobile-specific improvements
            document.getElementById('studentAuthForm').addEventListener('submit', function (e) {
                const rollNo = document.getElementById('rollNo').value.trim();
                let dob = dobInput.value.trim();
                const mobile = mobileInput.value.trim();
                const submitBtn = this.querySelector('button[type="submit"]');
                
                console.log('Form submission attempt:', { rollNo, hasDob: !!dob, hasMobile: !!mobile, isMobile });
                
                // Mobile-safe date conversion from YYYY-MM-DD to DD/MM/YYYY
                if (dob) {
                    try {
                        // Parse date string directly to avoid timezone issues
                        const dateParts = dob.split('-'); // YYYY-MM-DD format
                        if (dateParts.length === 3) {
                            const year = dateParts[0];
                            const month = dateParts[1];
                            const day = dateParts[2];
                            const convertedDate = `${day}/${month}/${year}`;
                            
                            console.log('Mobile-safe date conversion:', { original: dob, converted: convertedDate });
                            
                            // Update the hidden input or create one to send the converted date
                            let hiddenDobInput = document.getElementById('dobConverted');
                            if (!hiddenDobInput) {
                                hiddenDobInput = document.createElement('input');
                                hiddenDobInput.type = 'hidden';
                                hiddenDobInput.name = 'dob';
                                hiddenDobInput.id = 'dobConverted';
                                this.appendChild(hiddenDobInput);
                                // Remove name from original input to avoid conflict
                                dobInput.removeAttribute('name');
                            }
                            hiddenDobInput.value = convertedDate;
                        } else {
                            console.error('Invalid date format:', dob);
                            showError('Invalid date format. Please select a valid date.');
                            e.preventDefault();
                            return;
                        }
                    } catch (error) {
                        console.error('Date conversion error:', error);
                        showError('Error processing date. Please try again.');
                        e.preventDefault();
                        return;
                    }
                }

                // Clear any previous error states
                document.querySelectorAll('.form-control').forEach(input => {
                    input.classList.remove('is-invalid');
                });

                let hasError = false;

                // Validate roll number
                if (!rollNo) {
                    document.getElementById('rollNo').classList.add('is-invalid');
                    showError('Please enter your roll number');
                    hasError = true;
                }

                // Check if at least one authentication method is provided
                if (!dobInput.value.trim() && !mobile) {
                    dobInput.classList.add('is-invalid');
                    mobileInput.classList.add('is-invalid');
                    showError('Please enter either your date of birth or mobile number');
                    hasError = true;
                }

                // Validate date of birth if provided - Mobile-safe validation
                if (dobInput.value.trim()) {
                    try {
                        // Parse date string directly to avoid timezone issues on mobile
                        const dateParts = dobInput.value.split('-'); // YYYY-MM-DD format
                        if (dateParts.length === 3) {
                            const year = parseInt(dateParts[0], 10);
                            const month = parseInt(dateParts[1], 10);
                            const day = parseInt(dateParts[2], 10);
                            
                            // Validate date components
                            const today = new Date();
                            const currentYear = today.getFullYear();
                            
                            if (year < 1950 || year > currentYear || 
                                month < 1 || month > 12 || 
                                day < 1 || day > 31) {
                                dobInput.classList.add('is-invalid');
                                showError('Please select a valid date of birth');
                                hasError = true;
                            }
                            
                            // Check if date is not in future
                            const inputDate = new Date(year, month - 1, day);
                            if (inputDate > today) {
                                dobInput.classList.add('is-invalid');
                                showError('Date of birth cannot be in the future');
                                hasError = true;
                            }
                        } else {
                            dobInput.classList.add('is-invalid');
                            showError('Please select a valid date of birth');
                            hasError = true;
                        }
                    } catch (error) {
                        console.error('Date validation error:', error);
                        dobInput.classList.add('is-invalid');
                        showError('Please select a valid date of birth');
                        hasError = true;
                    }
                }

                // Enhanced mobile number validation
                if (mobile) {
                    // Clean the mobile number one more time
                    const cleanMobile = mobile.replace(/\D/g, '');
                    console.log('Mobile validation:', { original: mobile, cleaned: cleanMobile });
                    
                    if (!/^\d{10}$/.test(cleanMobile)) {
                        mobileInput.classList.add('is-invalid');
                        showError('Mobile number must be exactly 10 digits');
                        hasError = true;
                    } else {
                        // Update the input value with cleaned version
                        mobileInput.value = cleanMobile;
                    }
                }

                if (hasError) {
                    e.preventDefault();
                    // Ensure loading overlay is hidden on validation errors
                    isSubmitting = false;
                    const loadingOverlay = document.getElementById('loadingOverlay');
                    if (loadingOverlay) loadingOverlay.classList.add('d-none');
                    submitBtn.disabled = false;
                    return;
                }

                // If both are provided, show warning
                if (dobInput.value.trim() && mobile) {
                    if (!confirm('You have entered both date of birth and mobile number. We will use date of birth for authentication. Continue?')) {
                        e.preventDefault();
                        return;
                    }
                }

                console.log('Form validation passed, submitting...');

                // Show loading overlay with mobile-optimized timing
                isSubmitting = true;
                const loadingOverlay = document.getElementById('loadingOverlay');
                if (loadingOverlay) {
                    loadingOverlay.classList.remove('d-none');
                }
                submitBtn.disabled = true;

                // Mobile-optimized fallback timing (longer for mobile connections)
                const fallbackTime = isMobile ? 20000 : 15000;
                setTimeout(() => {
                    if (isSubmitting) {
                        console.warn('Form submission timeout, re-enabling form');
                        isSubmitting = false;
                        if (loadingOverlay) loadingOverlay.classList.add('d-none');
                        submitBtn.disabled = false;
                    }
                }, fallbackTime);
            });

            // Enhanced error handling function
            function showError(message) {
                console.error('Validation error:', message);
                
                // Remove existing error alerts
                const existingAlert = document.querySelector('.alert-danger.client-error');
                if (existingAlert) {
                    existingAlert.remove();
                }

                // Create new error alert
                const alertDiv = document.createElement('div');
                alertDiv.className = 'alert alert-danger client-error';
                alertDiv.innerHTML = `<i class="fas fa-exclamation-triangle me-2"></i>${message}`;

                // Insert before the form
                const form = document.getElementById('studentAuthForm');
                form.parentNode.insertBefore(alertDiv, form);

                // Scroll to error on mobile
                if (isMobile) {
                    alertDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });
                }

                // Auto-remove after longer time on mobile
                setTimeout(() => {
                    if (alertDiv && alertDiv.parentNode) {
                        alertDiv.remove();
                    }
                }, isMobile ? 8000 : 5000);
            }

            // Handle page unload and visibility changes to reset loading state
            let isSubmitting = false;
            
            function resetFormState() {
                if (isSubmitting) {
                    console.log('Resetting form state');
                    isSubmitting = false;
                    const loadingOverlay = document.getElementById('loadingOverlay');
                    const submitBtn = document.querySelector('#studentAuthForm button[type="submit"]');
                    if (loadingOverlay) loadingOverlay.classList.add('d-none');
                    if (submitBtn) submitBtn.disabled = false;
                }
            }
            
            window.addEventListener('beforeunload', resetFormState);
            window.addEventListener('pagehide', resetFormState);
            document.addEventListener('visibilitychange', function() {
                if (document.visibilityState === 'visible') {
                    resetFormState();
                }
            });
        });
    </script>
</body>

</html>
